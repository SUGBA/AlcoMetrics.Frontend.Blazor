@using Client.Pages.TimeLinePage.Request
<a href="#" class="dayContainer">
    <div class="dayCard">
        <div class="box">
            <div class="content">
                <h2>@Indicator.DayNumber</h2>
                <h3>@Indicator.Month</h3>
                <p>Спирт: @Indicator.EthanolValue %</p>
                <p>Сахар: @Indicator.SugarValue %</p>
                <p>Активных событий: @Indicator.EventCount</p>
            </div>
        </div>
    </div>
</a>

@code {
    /// <summary>
    /// Показатели для конкретного дня
    /// </summary>
    [EditorRequired, Parameter]
    public DayIndicators Indicator { get; set; } = new();
}
